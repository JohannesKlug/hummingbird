<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="waweForm" class="com.logica.hummingbird.simulator.waveforms.LinearWaveform">
		<constructor-arg index="0" value="101"/>
		<constructor-arg index="1" value="0"/>
		<constructor-arg index="1" value="1"/>
	</bean>

	<bean id="simulator" class="com.logica.hummingbird.simulator.Simulator">
		<constructor-arg index="0" ref="context"/>
		<constructor-arg index="1" ref="producer"/>
		<constructor-arg index="2"><null/></constructor-arg>
		<property name="messageInterval" value="1000"/>
		<property name="waveforms" ref="waweForm"/>
	</bean>


	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="direct:sendMessage" />
			<to uri="activemq:PacketsIn" />
		</route>
	
	</camelContext>
</beans>