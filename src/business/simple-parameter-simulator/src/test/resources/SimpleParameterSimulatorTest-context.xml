<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- String name, String description, Boolean value, String unit -->
	<bean id="Parameter1" class="org.hbird.business.simpleparametersimulator.BooleanParameter">
		<constructor-arg index="0" value="Parameter1"/>
		<constructor-arg index="1" value="Test parameter 1"/>	
		<constructor-arg index="2" value="true"/>
		<constructor-arg index="3" value=""/>		
	</bean>

	<!-- String name, String description, String unit, double intercept, double deltaFrequency, long modolus -->
	<bean id="Parameter2" class="org.hbird.business.simpleparametersimulator.LinearParameter">
		<constructor-arg index="0" value="Parameter2"/>
		<constructor-arg index="1" value="Test parameter 2"/>
		<constructor-arg index="2" value=""/>
		<constructor-arg index="3" value="0"/>
		<constructor-arg index="4" value="1"/>
		<constructor-arg index="5" value="1000"/>				
	</bean>

	<!-- String name, String description, String unit, double angularFrequency, double amplitude, double phase, double intercept, long modolus -->
	<bean id="Parameter3" class="org.hbird.business.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="Parameter3"/>
		<constructor-arg index="1" value="Test parameter 3"/>
		<constructor-arg index="2" value=""/>		
		<constructor-arg index="3" value="0.01"/>
		<constructor-arg index="4" value="10"/>
		<constructor-arg index="5" value="0"/>
		<constructor-arg index="6" value="0"/>
		<constructor-arg index="7" value="100"/>			
	</bean>

	<!-- String name, String description, Double value, String unit -->
	<bean id="Parameter4" class="org.hbird.business.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="Parameter4"/>
		<constructor-arg index="1" value="Test parameter 4"/>
		<constructor-arg index="2" value=""/>		
		<constructor-arg index="3" value="1"/>
	</bean>

	<bean id="commandHandler" class="org.hbird.business.simpleparametersimulator.CommandReader"/>


	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="direct:Commands" />
			<to uri="bean:commandHandler"/>
		</route>

		<route>
			<from uri="timer://timer1?fixedRate=true&amp;period=1000" />
			<to uri="bean:Parameter1"/>
			<to uri="mock:result"/>
		</route>

		<route>
			<from uri="timer://timer2?fixedRate=true&amp;period=1000" />
			<to uri="bean:Parameter2"/>
			<to uri="mock:result"/>
		</route>

		<route>
			<from uri="timer://timer3?fixedRate=true&amp;period=1000" />
			<to uri="bean:Parameter3"/>
			<to uri="mock:result"/>
		</route>

		<route>
			<from uri="timer://timer4?fixedRate=true&amp;period=1000" />
			<to uri="bean:Parameter4"/>
			<to uri="mock:result"/>
		</route>
	
	</camelContext>
	
</beans>