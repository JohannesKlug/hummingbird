<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="dValue" class="java.lang.Double">
		<constructor-arg index="0" value="1d"/>		
	</bean>


	<bean id="setParameterTask" class="org.hbird.tasks.actions.SetParameter">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" value="TestParameter"/>
		<constructor-arg index="2" ref="dValue"/>
		<constructor-arg index="3" value="Double"/>
	</bean>

	<bean id="setSateParameterTask" class="org.hbird.tasks.actions.SetStateParameter">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" value="TestStateParameter"/>
		<constructor-arg index="2" value="TestParameter"/>
		<constructor-arg index="3" value="false"/>
	</bean>

	<bean id="parameterBuffer" class="org.hbird.buffers.ObjectBuffer"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="direct:Parameters" />
			<to uri="mock:result"/>
		</route>
	
	</camelContext>
</beans>