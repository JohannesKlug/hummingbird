<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="dValue" class="java.lang.Double">
		<constructor-arg index="0" value="1d"/>		
	</bean>

	<bean id="bValue" class="java.lang.Boolean">
		<constructor-arg index="0" value="false"/>		
	</bean>
	
	<!-- String stateName, String description, String isStateOff, boolean state -->
	<bean id="aStateParameter" class="org.hbird.exchange.type.StateParameter">
		<constructor-arg index="0" value="aStateParameter"/>
		<constructor-arg index="1" value="A test state parameter"/>
		<constructor-arg index="2" value="aParameter"/>
		<constructor-arg index="3" ref="bValue"/>
	</bean>

	<!-- String name, String description, Object value, String unit -->
	<bean id="aParameter" class="org.hbird.exchange.type.Parameter">
		<constructor-arg index="0" value="aParameter"/>
		<constructor-arg index="1" value="A test parameter"/>
		<constructor-arg index="2" ref="dValue"/>
		<constructor-arg index="3" value="meter"/>
	</bean>
	
	<bean id="setParameterTask" class="org.hbird.exchange.tasks.actions.SetParameter">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" ref="aParameter"/>
	</bean>

	<bean id="setStateParameterTask" class="org.hbird.exchange.tasks.actions.SetParameter">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" ref="aStateParameter"/>
	</bean>

	<bean id="mapper" class="org.hbird.exchange.jms.AllFields"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="direct:Timer1" />
			<to uri="bean:setParameterTask"/>
			<to uri="bean:mapper" />
			<to uri="mock:result" />
		</route>

		<route>
			<from uri="direct:Timer2" />
			<to uri="bean:setStateParameterTask"/>
			<to uri="bean:mapper" />
			<to uri="mock:result" />
		</route>
	
	</camelContext>
</beans>
