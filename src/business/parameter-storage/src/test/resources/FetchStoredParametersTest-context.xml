<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

	<context:annotation-config />

	<bean id="fetchStoredParameters" class="org.hbird.business.parameterstorage.retriever.FetchStoredParameters">
		<constructor-arg index="0" ref="database" />
	</bean>

	<bean id="database" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.h2.Driver" />
		<property name="url" value="jdbc:h2:/tmp/hbird-unittests" />
		<property name="username" value="hbird" />
		<property name="password" value="" />
	</bean>

	<camelContext id="fetchStoredParametersContext" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer" />

		<route>
			<from uri="direct:Parameter" />
			<to uri="bean:fetchStoredParameters" />
		</route>

		<route>
			<from uri="seda:Result" />
			<to uri="stream:out" />
		</route>
	</camelContext>
</beans>



