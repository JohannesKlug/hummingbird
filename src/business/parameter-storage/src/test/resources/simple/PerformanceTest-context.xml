<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

	<context:annotation-config />

	<bean id="testData" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.h2.Driver" />
<!-- 		<property name="url" value="jdbc:h2:tcp://localhost/hbird-archive"/> -->
		<property name="url" value="jdbc:h2:src/test/resources/hbird-testparams"/>
		<property name="username" value="hbird" />
		<property name="password" value="" />
	</bean>
	
	<bean id="database" class="org.apache.commons.dbcp.BasicDataSource"	destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver" />
			<property name="url" value="jdbc:postgresql:hbird-performancetest"/>
<!-- 		<property name="driverClassName" value="org.h2.Driver" /> -->
<!-- 		<property name="url" value="jdbc:h2:tcp://localhost//tmp/hbird-archive"/> -->
<!--  		<property name="url" value="jdbc:h2:tcp://localhost//home/turbat/sources/hummingbird/src/business/parameter-storage/src/test/resources/hbird-5x1000parameters"/>  -->
		<property name="username" value="hbird" />
		<property name="password" value="hbird" />
	</bean>
	
	<bean id="fetchParameters" class="org.hbird.business.parameterstorage.simple.Retriever">
		<constructor-arg index="0" ref="testData" />
		<constructor-arg index="1" value="seda:retrievedTestParameters" />
	</bean>

	<bean id="databaseArchiver" class="org.hbird.business.parameterstorage.simple.Archiver" >
			<constructor-arg index="0" ref="database" />
	</bean>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer" />
		
		<dataFormats>
    	    <xstream id="xstream-default"/>
    	</dataFormats>

<!-- 		Route for retrieved parameters -->
		<route>
			<from uri="seda:retrievedTestParameters" />
			<unmarshal ref="xstream-default"/>
			<to uri="mock:retrievedTestParametersBuffer" />
		</route>
		
<!-- 		<route> -->
<!-- 			<from uri="direct:fetchParameter" /> -->
<!-- 			<to uri="bean:fetchStoredParameters" /> -->
<!-- 		</route> -->
		
		<route>
			<from uri="seda:performanceTest" />
			<marshal ref="xstream-default"/>
			<to uri="bean:databaseArchiver" /> 
 			<to uri="mock:countMessages" />
		</route>
	</camelContext>
</beans>



