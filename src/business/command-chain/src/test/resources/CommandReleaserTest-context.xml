<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">


	<bean id="provider" class="org.hbird.business.parameterstorage.InMemoryParameterBuffer"/>
	<bean id="commandreleaser" class="org.hbird.business.command.releaser.CommandReleaser"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="direct:Commands" />
			<split>
			<method bean="commandreleaser"></method>
			<choice>
	            <when>
	                <simple>${body} is org.hbird.exchange.commanding.Command</simple>                
	                <to uri="mock:ReleasedCommands" />
	            </when>
				<when>
	                <simple>${body} is org.hbird.exchange.commanding.Task</simple>                
	                <to uri="mock:Tasks" />
	            </when>
			</choice>
			</split>
		</route>

		<route>
			<from uri="direct:ParameterRequests" />
			<to uri="bean:provider?method=getParameterByName"/>
		</route>
		
		<route>
			<from uri="direct:Parameters" />
			<to uri="bean:provider?method=storeParameter"/>			
		</route>		
	
	</camelContext>
</beans>